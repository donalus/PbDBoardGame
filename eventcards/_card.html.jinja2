<div class="card" id="{{card_id}}">
    <!-- YOUR CUSTOM CODE STARTS HERE -->
    <div class="header">
    {%if avatar %}
    <img class="avatar" src="images/{{avatar}}" />
    {% endif %}
    <div class="title">{{title}}</div>
    </div>
    {% if flavor %}
    <div class="flavor">{{flavor}}</div>
    {% endif %}
    <br />
    {% if instructions or alt_instructions %}
    <div class="instructions">
      {% if instructions %}
        {{instructions}}
        {% if alt_instructions %}
        <div class="alt-sep">-- <b>Or</b> --</div>
        <span class="alt-instruction">{{alt_instructions}}</span>
        {% endif %}
      {% else %}
        {{alt_instructions}}
      {% endif %}
    </div>
    {% endif %}

    {% if False %}
    <div class="carac">
      {% if devshare %}
        <div class="iconcell">
            <img class="icon" src="dev_time.png"> {{devshare}}
        </div>
      {% endif %}
      {% if usershare %}
        <div class="iconcell">
            <img class="icon" src="user_trust.png"> {{usershare}}
        </div>
      {% endif %}
    </div>
    {% endif %}
    <!-- YOUR CUSTOM CODE ENDS HERE -->
</div>
